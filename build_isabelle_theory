#!/usr/bin/env bash

set -e

projname=$(basename $(pwd))
isa_ver="$1"
rootdir="$2"
session="$3"

if [ "x$session" == "x" ]; then
    session=$projname
fi

echo "Fetching Isabelle:"

case $isa_ver in
    2021-1)
        wget -nv -O - https://isabelle.in.tum.de/dist/Isabelle2021-1_linux.tar.gz | tar -xzf - 
        cd Isabelle2021-1
        isa_base=$(pwd)
        ;;
    *)
        echo "Unknown Isabelle version `$isa_ver`."
        exit 1
        ;;
esac


#echo projname = "$projname"
#echo rootdir = "$rootdir"
#echo session = "$session"
#echo "workspace =" "$GITHUB_WORKSPACE"

echo "Adding project sources:"
echo "list workspace"
ls "$GITHUB_WORKSPACE"
echo "list rootdir"
ls "$GITHUB_WORKSPACE/$rootdir"
echo "Adding project sources:"
ln -s "$GITHUB_WORKSPACE/$rootdir" "$isa_base/src/$projname"
cd "$isa_base"
echo "Adding root: src/$projname"
echo "src/$projname" >> ROOTS
echo "Listing src dir:"
ls "$isa_base/src/"
echo "Listing project root:"
ls "$isa_base/src/$projname"
echo -------------------
ls "$isa_base/src/$projname/"
echo "building with: isabelle build -b \"$session\""
./bin/isabelle build -b "$session"
